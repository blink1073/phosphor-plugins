{
  "name": "phosphide",
  "version": "0.2.0",
  "description": "A slightly opinionated scaffolding for building plugin-based IDE-style applications.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "dependencies": {
    "phosphor-disposable": "^1.0.4",
    "phosphor-dockpanel": "^0.9.2",
    "phosphor-menus": "^0.9.5",
    "phosphor-signaling": "^1.1.2",
    "phosphor-tabs": "^0.9.7",
    "phosphor-topsort": "^0.9.1",
    "phosphor-widget": "^0.9.11"
  },
  "devDependencies": {
    "coveralls": "^2.11.4",
    "expect.js": "^0.3.1",
    "glob-copy": "^0.1.0",
    "istanbul": "^0.3.19",
    "mkdirp": "^0.5.1",
    "mocha": "^2.2.5",
    "rimraf": "^2.4.2",
    "steal": "^0.12.1",
    "typedoc": "^0.3.11",
    "typescript": "^1.6.2"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build:src": "tsc --project src",
    "build:plugins": "tsc --project plugins/ui/src && tsc --project plugins/menus/src",
    "build": "npm run build:src",
    "build:example": "mkdirp example/phosphide && node scripts/copyjs.js",
    "prepublish": "npm run build && npm run build:plugins",
    "postinstall": "npm dedupe"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phosphide/phosphide.git"
  },
  "files": [
    "lib/index.js",
    "lib/index.d.ts"
  ],
  "keywords": [
    "phosphide",
    "plugin",
    "application"
  ],
  "phosphide": {
    "extensionPoints": [
      {
        "module": "plugins/menus/lib/index",
        "id": "menu:items",
        "receiver": "receiveItems",
        "initializer": "initialize"
      },
      {
        "module": "plugins/ui/lib/index",
        "id": "ui:items",
        "receiver": "receiveItems",
        "initializer": "initialize"
      }
    ]
  },
  "author": "Dave Willmer <dave.willmer@gmail.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/phosphide/phosphide/issues"
  },
  "homepage": "https://github.com/phosphide/phosphide"
}
